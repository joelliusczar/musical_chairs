{
  "editor.tabSize": 2,
  "editor.rulers": [80, 120],
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#ef40ff"
  },
  "python.analysis.extraPaths": ["src/tests", "src/api"],
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.indexing": true,
  "python.analysis.useLibraryCodeForTypes": true,
  "python.defaultInterpreterPath": "${workspaceFolder}/test_trash/musical_chairs/mcr_env/bin/python",
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}/src: ${workspaceFolder}/src/api",
    "MC_LIB_NAME": "musical_chairs_libs",
    "MC_APP_NAME": "musical_chairs_app",
    "MCR_TEST_ROOT": "${workspaceFolder}/test_trash"
  },
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}/src: ${workspaceFolder}/src/api",
    "MCR_TEST_ROOT": "${workspaceFolder}/test_trash",
  },
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.cwd": "${workspaceFolder}/src/tests",
  "python.testing.pytestPath": "${workspaceFolder}/test_trash/musical_chairs/mcr_env/bin/pytest",
  "python.testing.pytestArgs": [
    "-s", "-p", "no:warnings"
  ],
  "python.terminal.activateEnvironment": false,
  "python.envFile": "${workspaceFolder}/.env",
  "search.exclude": {
    "**/test_trash": true
  },
  "editor.insertSpaces": false,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
}